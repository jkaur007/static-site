---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pilot Training - Aviation Dreams">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Training Journey</h1>

    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-bold mb-4">Training Requirements</h2>
        <ul class="space-y-4">
          <li class="flex items-start">
            <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center mr-3 mt-1">1</span>
            <div>
              <h3 class="font-semibold">Private Pilot License (PPL)</h3>
              <p>Minimum 40 hours of flight time, including 20 hours with an instructor and 10 hours of solo flight.</p>
            </div>
          </li>
          <li class="flex items-start">
            <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center mr-3 mt-1">2</span>
            <div>
              <h3 class="font-semibold">Instrument Rating</h3>
              <p>Additional 40 hours of instrument time, learning to fly solely by reference to instruments.</p>
            </div>
          </li>
          <li class="flex items-start">
            <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center mr-3 mt-1">3</span>
            <div>
              <h3 class="font-semibold">Commercial Pilot License (CPL)</h3>
              <p>Minimum 250 hours total time, including complex aircraft time and cross-country experience.</p>
            </div>
          </li>
        </ul>
      </div>

      <img 
        src="https://images.unsplash.com/photo-1569154941061-e231b4725ef1"
        alt="Flight simulator training"
        class="rounded-lg shadow-lg w-full mb-8"
      />
    </div>
  </main>
</Layout>