---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "My First Flight Lesson",
    date: "2024-01-15",
    excerpt: "Experience and emotions from my first time in the cockpit.",
    image: "https://media.licdn.com/dms/image/v2/D5622AQHmXgrsVj7OPg/feedshare-shrink_2048_1536/B56ZX3hoIOGsAo-/0/1743614544579?e=1747267200&v=beta&t=fAEJLjk7NKaqr38W19rLpBgOlZyz2UKT8qROJQxxGRM"
  },
  {
    title: "Understanding Weather Patterns",
    date: "2024-01-22",
    excerpt: "The importance of meteorology in aviation and how it affects flight planning.",
    image: "https://images.unsplash.com/photo-1534088568595-a066f410bcda"
  },
  {
    title: "Radio Communication Basics",
    date: "2024-01-29",
    excerpt: "Learning the language of aviation and proper radio etiquette.",
    image: "https://images.unsplash.com/photo-1734462289519-33da2ce2bdee?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
  }
];
---

<Layout title="Aviation Blog - Aviation Dreams">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Aviation Blog</h1>
    
    <div class="max-w-4xl mx-auto">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
          <img 
            src={post.image}
            alt={post.title}
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <div class="text-gray-500 mb-2">{post.date}</div>
            <h2 class="text-2xl font-bold mb-3">{post.title}</h2>
            <p class="text-gray-600 mb-4">{post.excerpt}</p>
            <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold">Read more â†’</a>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>